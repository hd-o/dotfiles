{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [],
  "keybinds": {
    "input_submit": "alt+enter",
  },
  "agent": {
    "plan": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4",
      "temperature": 0.8,
      "permission": {
        "bash": "ask",
        "edit": "ask",
        "webfetch": "allow",
      },
    },
    "build": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4",
      "temperature": 0.8,
      "permission": {
        "bash": "ask",
        "edit": "allow",
        "webfetch": "allow",
      },
    },
    "claude-code": {
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-20250514",
      "temperature": 0.8,
      "permission": {
        "bash": "ask",
        "edit": "allow",
        "webfetch": "allow",
      },
    },
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "@playwright/mcp@latest", "--isolated", "--browser=chromium"],
    },
    "tavily": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "tavily-mcp@0.2.3"],
    },
    "context7": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "@upstash/context7-mcp"],
    },
    "task-master-ai": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "--package=task-master-ai", "task-master-ai"],
    },
  },
}
