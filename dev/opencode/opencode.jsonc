{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [],
  "keybinds": {
    "input_submit": "alt+enter",
  },
  "permission": {
    "bash": {
      "git --no-pager diff *": "allow",
      "git diff *": "allow",
      "git status": "allow",
    },
    "edit": "ask",
    "webfetch": "ask",
  },
  "agent": {
    "plan": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4",
      "temperature": 0.8,
    },
    "build": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4",
      "temperature": 0.8,
      "permission": {
        "edit": "allow",
      },
    },
    "review": {
      "mode": "primary",
      "model": "github-copilot/gpt-5-mini",
    },
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "@playwright/mcp@latest", "--isolated", "--browser=chromium"],
    },
    "tavily": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "tavily-mcp@0.2.3"],
    },
    "context7": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "@upstash/context7-mcp"],
    },
    "task-master-ai": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "--package=task-master-ai", "task-master-ai"],
    },
  },
}
