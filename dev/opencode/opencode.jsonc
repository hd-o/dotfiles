{
  "$schema": "https://opencode.ai/config.json",
  "model": "openrouter/openai/gpt-5",
  "small_model": "openrouter/openai/gpt-5-nano",
  "tui": {
    "scroll_speed": 1,
  },
  "keybinds": {
    "input_submit": "alt+enter",
  },
  "provider": {
    "anthropic": {
      "models": {
        "claude-sonnet-4-20250514": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 4000,
            },
          },
        },
      },
    },
    "openrouter": {
      "models": {
        "openrouter/openai/gpt-5": {
          "options": {
            "reasoningEffort": "medium",
            "textVerbosity": "low",
          },
        },
        "openai/gpt-5-mini": {
          "options": {
            "reasoningEffort": "medium",
            "textVerbosity": "low",
          },
        },
      },
    },
  },
  "permission": {
    "bash": {
      "git --no-pager diff *": "allow",
      "git diff *": "allow",
      "git status": "allow",
      "grep *": "allow",
      "npm run lint:changed": "allow",
      "npm run test -- *": "allow",
      "rg *": "allow",
      "tree *": "allow",
    },
    "edit": "ask",
    "webfetch": "ask",
  },
  "agent": {
    "ask": {
      "mode": "primary",
      "model": "github-copilot/gpt-5-mini",
    },
    "plan": {
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-20250514",
    },
    "build": {
      "mode": "primary",
      "model": "openrouter/openai/gpt-5",
      "permission": {
        "edit": "allow",
      },
    },
    "debug": {
      "mode": "primary",
      "model": "openrouter/openai/gpt-5-mini",
    },
  },
  "mcp": {
    "context7": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "@upstash/context7-mcp"],
    },
    "tavily": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "tavily-mcp@0.2.3"],
    },
    "linear": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.linear.app/sse"],
    },
    "playwright": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp@latest", "--isolated", "--browser=chromium"],
    },
    "task-master-ai": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "--package=task-master-ai", "task-master-ai"],
    },
  },
}
